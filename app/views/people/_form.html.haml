= form_for(@person) do |f|

  - if @person.errors.any?
    .error_explanation
      %h2= pluralize(@person.error.count, "error")
      
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg
      
  .field
    = f.label :first_name
    %br
    = f.text_field :first_name
    
  .field
    = f.label :last_name
    %br
    = f.text_field :last_name
    
  .field
    = f.label :email
    %br
    = f.text_field :email
    
  .actions
    = f.submit