<%= provide(:title, "Giriş") %>
<h2>Giriş</h2>
<div class="row">
  <div class="span6 offset3">
  
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, label: "Şifre", required: false %>
      <%= f.input :remember_me, label: "Beni Hatirla", item_wrapper_class: "inline",  as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Giris", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
