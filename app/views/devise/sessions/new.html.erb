<%= provide(:title, "GiriÅŸ") %>
<div id = "login-page-content">
	<h2><%= "#{t 'devise.sessions.new.login'}"%></h2>
	<div class="row">
	  <div class="span6">
	  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	    <div class="form-inputs">
	      <%= f.input :email, required: false, autofocus: true %>
	      <%= f.input :password, label: "#{t 'devise.sessions.new.firstname'}", required: false %>
	      <%= f.input :remember_me, label:false, inline_label: "#{t 'devise.sessions.new.remember'}", item_wrapper_class: "inline",  as: :boolean, style: "padding: 0px", input_html: { class: "inline-checkbox-customized" } if devise_mapping.rememberable? %>
	    </div>

	    <div class="form-actions">
	      <%= f.button :submit, "#{t 'devise.sessions.new.login_button'}", class: "btn btn-primary" %>
	    </div>
	  <% end %>

	  <%= render "devise/shared/links" %>
	  </div><!--span6-->
	</div>
</div>

