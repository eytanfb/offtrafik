<div id="fb-root"></div>
<div class="row">
  <%= render partial: "shared/sidebar" %>
  <div class="span4" id="posting-sharing">
	<div id="twitter" style: "margin-top: 20px">
		<div data-count="none">
      <a href="https://twitter.com/share?text=@Offtrafik'te ilan verdim. <%= Posting.format(@posting.from_address) %> - <%= Posting.format(@posting.to_address) %> arasi <%= l @posting.date, format: :default %> gununde yolculuk paylasacak insan ariyorum.&url=<%= request.protocol + request.host_with_port %>/postings/<%= @posting.id %>&count=none" class="btn btn-twitter" target="_blank"><i class="fa fa-twitter"></i>|Tweet</a>
		</div>
	</div>
      <!-- <button data-href="<%= request.protocol + request.host_with_port %>/postings/<%= @posting.id %>" data-type="button" class="btn btn-facebook"><i class="fa fa-facebook"></i> |Share</button> -->
      <div class="fb-share-button btn btn-facebook" data-href="<%= request.protocol + request.host_with_port %>/postings/<%= @posting.id %>" data-type="button" style="width: 60px"></div>

  <div style="margin-top: 20px"></div>
  <%= link_to "İlanlara Dön", find_posting_path, class: "btn btn-primary green-button" %>
</div>
</div>

<% content_for :javascripts do %>
  <%= javascript_include_tag "sharing.js" %>
<% end %>