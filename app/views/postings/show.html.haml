.row
  %aside.span4
    %section
      = render 'shared/user_info'
  
  .div#posting-show
    .span8
      #map{ style: "margin-top:20px" }
    .span8#posting-details{ style: "margin-left: 340px", onload: "calcRouteForShow()" }
      %h3.center{ style: "text-decoration: underline" } Ilan Detaylari
      %p== <span class='detail'>Ilan Sahibi:</span>  <span class='answer'>#{link_to @user.name, user_path(@user)}</span>
      %p==<span class='detail'>Nereden:</span>       <span class='answer' id='from_address'>#{@posting.from_address}</span>
      %p==<span class='detail'>Nereye:</span>        <span class='answer' id='to_address'>#{@posting.to_address}</span>
      %p==<span class='detail'>Tarih:</span>         <span class='answer'>#{l @posting.date, format: :default}</span>
      %p==<span class='detail'>Cıkış Zamani:</span>  <span class='answer'>#{@posting.starting_time.to_s(:time)}</span>
      %p==<span class='detail'>Varış Zamani:</span>  <span class='answer'>#{@posting.ending_time.to_s(:time)}</span>
      %p==<span class='detail'>Sigara:</span>        <span class='answer'>#{@posting.smoking?}</span>
      %p==<span class='detail'>Ihtiyaç:</span>       <span class='answer'>#{@posting.driving}</span>
      - if @posting.comments.present?
        %p==<span class='detail'>Ekstra:</span>        <span class='answer'>#{@posting.comments}</span>
      - if @posting.user_id != current_user.id && @posting.active?
        %p= link_to "Iletişime Geç", posting_contact_posting_owner_path(@posting.id), class: "btn btn-primary btn-warning answer", style: "margin-left: 220px; width: 100px", data: { toggle: 'modal', target: '#contact-posting-owner-modal-window' }, remote: true
      - else
        %p
          = link_to "Ilanı Değiştir", edit_posting_path(@posting), class: "btn btn-primary btn-warning detail", style: "width: 95px; margin-left:80px; font-weight: normal"
          = link_to "Ilanı Sil", "#", method: :delete, confirm: "Emin Misiniz?", class: "btn btn-primary btn-danger answer", style: "width: 60px"
        
#contact-posting-owner-modal-window.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "contact-posting-owner-modal-label", role: "dialog"}
        
- content_for :javascripts do
  = javascript_include_tag "postings.js"
  = javascript_include_tag "maps.js"
  
  
