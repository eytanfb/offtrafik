<h3>Ä°lan Ara</h3>
<div id="posting-find">
  <%= simple_form_for @posting, method: "get", url: { controller: "postings", action: "find" } do |f| %>
        <div class="row">
          <%= f.input :from_address, label: false, placeholder: "Nereden", input_html: { id: "from_address", class: "search-input" }  %>
        </div>
        <div class="row">
          <%= f.input :to_address, label: false, placeholder: "Nereye", input_html: { id: "to_address", class: "search-input" } %>
        </div>
        <div class="row">
          <%= f.input :driving, label: false, include_blank: "Aranan", collection: @driving_options, input_html: { id: "driving" } %>
          <%= f.button :submit, "Ara", class: 'btn btn-primary btn-medium span3' %>
        </div>
  <% end %>
    <% if @postings.present? %>      
      <div id="show-results">
        <%= render 'shared/posting_table', posting_list: @postings, param_name: "page" %>
      </div>
    <% end %>
</div>

<% content_for :javascripts do %>
  <%= javascript_include_tag "postings.js" %>
<% end %>