<%= simple_form_for posting, method: "get", html: { id: "filter-posting-search" }, url: { controller: "postings", action: "find" } do |f| %>
  <%= f.input :from_address, label: false, placeholder: "#{t 'postings.filter_postings.from_address'}", input_html: { id: "from_address", class: "posting-filter-search" }  %>
  <%= f.input :to_address, label: false, placeholder: "#{t 'postings.filter_postings.to_address'}", input_html: { id: "to_address", class: "posting-filter-search" } %>
  <%= f.input :driving, label: false, include_blank: "#{t 'postings.filter_postings.all'}", collection: driving_options, input_html: { id: "driving" } %>
  <%= f.input :date, label: false, as: :string, placeholder: "#{t 'postings.filter_postings.date'}", input_html: { id: "date" } %>
<% end %>
<% logger.info "filter postings" %>
