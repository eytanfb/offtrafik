= form_for(@car) do |f|

  - if @car.errors.any?
    .error_explanation
      %h2= pluralize(@car.error.count, "error")
      
      %ul
        - @car.errors.full_messages.each do |msg|
          %li= msg
      
  .field
    = f.label :person_id
    %br
    = f.number_field :person_id
    
  .field
    = f.label :capacity
    %br
    = f.text_field :capacity
    
  .actions
    = f.submit