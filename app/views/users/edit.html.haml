= provide(:title, "Profil Güncelle")
%h1 Profil Güncelle

.row
  .span6.offset3
    = form_for(@user) do |f|
      = render 'shared/error_messages', object: f.object
      
      = f.label :name, "Isim"
      = f.text_field :name
      
      = f.label :email
      = f.text_field :email
      
      = f.label :password, "Şifre"
      = f.password_field :password
      
      = f.label :password_confirmation, "Şifre Onaylama"
      = f.password_field :password_confirmation
      
      = f.submit "Değişiklikleri Kaydet", class: "btn btn-large btn-primary"
      
    = gravatar_for @user
    %a{ href: "http://gravatar.com/emails" } change