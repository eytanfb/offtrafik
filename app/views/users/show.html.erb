<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section id="notifications">
      <h2 style="color: black">Notifications: <%= @notifications.count %></h2>
      <% @notifications.each do |notification| %>
        <div>
          <p><%= "<i class='icon-user'></i>  #{notification.responder.name}".html_safe %></p>
          <p><%= "<i class='icon-map-marker icon-green'></i>  Nereden: #{notification.posting.from_address}".html_safe %></p>
          <p><%= "<i class='icon-map-marker icon-red'></i>  Nereye: #{notification.posting.to_address}".html_safe %></p>
          <p><%= "<i class='icon-time'></i>  #{notification.posting.starting_time.strftime("%H:%M")}".html_safe %></p>
        </div>
        <hr/>
      <% end %>
    </section>
  </aside>
  <section id="user-show">
    <h1 id="user-name-heading">
      <%= @user.name %>
    </h1>
    <p style="font-size: 14px; margin-bottom: 10px"> <%= @user.summary %></p>
    <div id="map"></div>
    <section>
      <h4 style="display: none">Semt: <span id="neighborhood">#{@user.neighborhood}</span></h4>
      <div class="row">
        <div class="span6">
          <h4>Yolculuk PuanÄ±: <%= @user.trip_rating %></h4>
        </div>
        <div class="span6">
          <h4 id='total-journey-count'>Toplam Yolculuklar: <%= @user.total_journeys %> </h4>
        </div>
      </div>
    </section>
    <div class="row">
      <div class="span6">
        <%= render 'display_comments', comments: @comments, user: @user %>
      </div>
      <div class="span6">
        <h3 id="past-journeys">Gecmis Yolculuklar</h3>
        <%= will_paginate @agreed_journeys, param_name: "journey_page" %>
        <table>
          <tr>
            <td id="date-time"><strong>Tarih</strong></td>
            <td id="journey"><strong>Yolculuk</strong></td>
            <td id="with-who"><strong>Kiminle</strong></td>
          </tr>
          <tbody>
            <% @agreed_journeys.each do |journey| %>
              <tr id="<%= journey.user.name.parameterize %>-<%= journey.id %>">
                <td><%= "#{journey.formatted_date} #{journey.starting_time.strftime("%H:%M")} - #{journey.ending_time.strftime("%H:%M")}" %></td>
                <td><%= "#{journey.from_address} - #{journey.to_address}" %></td>
                <td><%= journey.people_who_completed_journey(current_user.name).join(',').present? ? journey.people_who_completed_journey(current_user.name).join(',') : "Yalniz" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>
<% content_for :javascripts do %>
  <%= javascript_include_tag "users.js" %>
  <%= javascript_include_tag "maps.js" %>
<% end %>
