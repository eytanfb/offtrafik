<%= link_to (gravatar_for current_user, size: 52), user_path(current_user)%>
<h1>
  <%= link_to current_user.name, user_path(current_user) %>
</h1>
<section id="user_info">
  <p>Yolculuk Puanı: <%= current_user.calculate_rating != 0 ? "#{current_user.trip_rating}/5" : "N/A" %> </p>
  <p class="side-button-p">
    <a class="btn btn-primary i-button" href="<%= new_posting_path %>" style="color:white;">
      <i class="fa fa-edit fa-lg"></i>
      İlan Oluştur
    </a>
  </p>
  <p class="side-button-p">
    <a class="btn btn-primary side-button-search i-button" href="<%= find_posting_path %>">
      <i class="fa fa-search fa-lg"></i>
      İlan Ara
    </a>
  </p>
  <p class="side-button-p">
    <a class="btn btn-primary side-button-list i-button" href="<%= user_postings_path(current_user) %>">
      <i class="fa fa-list fa-lg"></i>
      İlanlarim
    </a>
  </p>
</section>
