<table id="posting-search-results" class="table">
  <thead>
	  <th>Kim</th>
	  <th>Nereden</th>
	  <th>Nereye</th>
	  <th>Tarih</th>
	  <th>Çıkış Zamanı</th>
	  <th>Varış Zamanı</th>
	  <th>İhtiyaç</th>
    <% if params[:action] == "past_responses" %>
      <td>Gerceklesti?</td>
    <% end %>
  </thead>
  <tbody>
    <% posting_list.each do |posting| %>
      <tr class="table-hover clickable" href="<%= posting_path(posting) %>">
        <td><%= posting.user.name %></td>
        <td><%= posting.format(posting.from_address) %></td>
        <td><%= posting.format(posting.to_address) %></td>
        <td><%= "#{l posting.date, format: :short}" %></td>
        <td><%= posting.starting_time.to_s(:time) %></td>
        <td><%= posting.ending_time.to_s(:time) %></td>
        <td><%= posting.driving %></td>
        <% if params[:action] == "past_responses" %>
          <td><%= link_to "Evet", "#", class: "yes", remote: true %> <%= link_to "Hayir", "#", class: "no", remote: true %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>