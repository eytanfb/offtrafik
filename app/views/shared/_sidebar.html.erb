<aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section id="notifications">
      <h2 style="color: black; margin-bottom: 10px">Notifications: <%= @notifications.count %></h2>
      <% @notifications.each do |notification| %>
        <div class="clickable" href="<%= posting_path(notification.posting) %>">
          <p><%= "<i class='fa fa-user        fa-lg  blue'></i>  #{notification.responder.name}".html_safe %></p>
          <p><%= "<i class='fa fa-map-marker  fa-2x green' ></i>  Nereden: #{Posting.format(notification.posting.from_address)}".html_safe %></p>
          <p><%= "<i class='fa fa-map-marker  fa-2x red'></i>  Nereye: #{Posting.format(notification.posting.to_address)}".html_safe %></p>
          <p><%= "<i class='fa fa-clock-o     fa-lg orange'></i>  #{notification.posting.starting_time.strftime("%H:%M")}".html_safe %></p>
          <p><%= "<i class='fa fa-calendar    fa-lg midnight'></i>  #{notification.posting.formatted_date}".html_safe %></p>
        </div>
        <hr/>
      <% end %>
    </section>
  </aside>