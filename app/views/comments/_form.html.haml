.span4
  = form_for @comment do |f|
    = render 'shared/error_messages', object: f.object
    
    = f.hidden_field :is_about, value: @is_about

    = f.label :rating, "Puan"
    = f.select :rating, [0, 1, 2, 3, 4, 5].collect { |option| option }

    = f.label :text, "Yorum"
    = f.text_area :text, cols: 40, rows: 10    

    = f.submit "Kaydet", class: "btn btn-primary"