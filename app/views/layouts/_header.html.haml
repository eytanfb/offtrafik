%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner#header
    .container
      - if signed_in?
        = link_to (image_tag "offtrafik-logo-on-green.png", id: "logo"), find_posting_path
      - else
        = link_to (image_tag "offtrafik-logo-on-green.png", id: "logo"), root_path
      %nav
        %ul.nav.pull-right                  
          - if signed_in?
            %li= link_to "Ana Sayfa", find_posting_path, class: "header-tab" # home  
            %li.dropdown
              = link_to "Profil <b class='caret'></b>".html_safe, "#", class: "dropdown-toggle header-tab", data: { toggle: "dropdown" }
              %ul.dropdown-menu
                %li
                  = link_to "Profil", current_user
                %li
                  = link_to "Ayarlar", edit_user_path(current_user) # settings
                %li.divider
                %li
                  = link_to "Çıkış", signout_path, method: "delete" # signouton            
                  
          - else
            %li= link_to "Ana Sayfa", root_path, class: "header-tab" # home
            %li= link_to "Neden?", why_path, class: "navbar-tab", style: "color: white" # why
            %li= link_to "Giriş", signin_path, class: "navbar-tab", style: "color: white" #signin